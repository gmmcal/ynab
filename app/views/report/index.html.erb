<div class="col-3 ps-3 pt-2">
    <div class="pt-1 pb-1">
        <h3>Years</h3>
        <%=link_to "All", category_path(category: params[:category]), class: 'btn btn-secondary m-1'%>
        <% years.each do |year| %>
            <%=link_to year, category_year_path(year: year, category: @category&.name), class: 'btn btn-secondary m-1'%>
        <% end %>
    </div>

    <div class="pt-1 pb-1">
        <h3>Categories</h3>
        <%=link_to "All", year_path(year: params[:year]), class: 'btn btn-primary m-1'%>
        <% categories.each do |category| %>
            <%=link_to category, category_year_path(year: params[:year], category: category), class: 'btn btn-primary m-1'%>
        <% end %>
    </div>
</div>

<div class="col-9 pt-2">
    <turbo-frame id="chart-container" src="<%= report_path(year: @year, category: @category&.name) %>"></turbo-frame>
</div>
